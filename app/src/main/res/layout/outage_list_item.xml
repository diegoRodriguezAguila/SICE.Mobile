<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/lbl_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/calendar"
            android:drawableStart="@drawable/calendar"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.Montserrat.Subhead"
            android:drawablePadding="8dp"
            tools:text="Martes, Julio 12, 2016"/>

        <TextView
            android:id="@+id/lbl_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/time"
            android:drawableStart="@drawable/time"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.Montserrat.Body1"
            android:drawablePadding="8dp"
            tools:text="De 11:10 a 15:30"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zones"/>

            <TextView
                android:id="@+id/lbl_zones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textAppearance="@style/TextAppearance.Montserrat.Body1"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                tools:text="VILLA CALAMA; UNION KASSA HUASA; TIQUIRANI; JARKA PAMPA;
            HUERTA MAYU; CHAUPILOMA; ALTO KARA KARA; VILLA SANTIAGO;
            VILLA FLORIDA; PAMPA SAN MIGUEL"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>