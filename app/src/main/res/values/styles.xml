<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Elfec.Sice.Dialog.Title"
           parent="TextAppearance.Montserrat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/montserrat_ultra_light.otf</item>
        <item name="android:textAppearance">@style/TextAppearance.Montserrat.Title</item>
    </style>

    <style name="TextAppearance.Elfec.Sice.Widget.ActionBar.Title"
           parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontPath">fonts/montserrat_ultra_light.otf</item>
    </style>

    <style name="TextAppearance.Montserrat.Light" parent="TextAppearance.AppCompat">
        <item name="fontPath">fonts/montserrat_ultra_light.otf</item>
    </style>

    <style name="TextAppearance.Montserrat.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="fontPath">fonts/montserrat_ultra_light.otf</item>
    </style>

    <style name="TextAppearance.Montserrat.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontPath">fonts/montserrat_ultra_light.otf</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="TextAppearance.Montserrat.Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="fontPath">fonts/montserrat.otf</item>
    </style>

    <style name="TextAppearance.Montserrat.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="fontPath">fonts/montserrat</item>
    </style>

    <style name="Widget.Elfec.Sice.Button.Negative"
           parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="colorButtonNormal">@color/negativeButtonBackground</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Widget.Sice.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="elevation">0dp</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Sice.ActionBar.TextStyle</item>
    </style>

    <style name="TextAppearance.Sice.ActionBar.TextStyle"
           parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/montserrat_ultra_light.otf</item>
    </style>
</resources>